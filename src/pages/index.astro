---
import Layout from '../layouts/Layout.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';
import { Image } from 'astro:assets';
import scientistImage from '../assets/scientist.jpeg';
import chickenFurImage from '../assets/chicken_fur.jpg'; // Import the new image
import GlobalPartners from '../components/GlobalPartners.astro'; // Import GlobalPartners component
import protectionLogo from '../assets/protection-logo.svg?raw';
import gutLogo from '../assets/gut-logo.svg?raw';
import profitLogo from '../assets/profit-logo.svg?raw';

const lang = Astro.currentLocale || 'en';
---

<Layout title="Home">
	<!-- Hero Section -->
	<section class="relative text-white overflow-hidden">
        <Image
            src={chickenFurImage}
            alt="Phora Animal Production Background"
            class="absolute inset-0 w-full h-full object-cover grayscale contrast-100 brightness-80"
            widths={[400, 800, 1200, 1600]}
            sizes="(max-width: 768px) 100vw, 100vw"
            loading="eager"
            format="webp"
        />
        <div class="absolute inset-0 bg-primary/90"></div> <!-- Primary Deep Green overlay -->

		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32 flex flex-col items-center justify-center text-center min-h-[600px]">
			<div class="inline-block px-3 py-1 mb-6 text-xs font-semibold tracking-widest text-white uppercase bg-white/20 rounded-full border border-white/20">
				OFFICIAL DISTRIBUTOR OF ARM & HAMMER ANIMAL NUTRITION
			</div>
			<h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6 leading-tight text-gray-200">
				Total Control in <br/>Animal Production
			</h1>
			<p class="text-xl md:text-2xl text-gray-300 max-w-2xl mb-10 font-medium">
				Advanced biotechnology solutions for gut welfare, antibiotic reduction, and performance optimization.
			</p>
			<div class="flex flex-col sm:flex-row gap-4">
				<a href={getRelativeLocaleUrl(lang, 'solutions')} class="px-8 py-4 bg-accent hover:bg-orange-600 text-white font-bold rounded-md transition-shadow shadow-lg hover:shadow-xl text-center">
					Our Technologies
				</a>
				<a href={getRelativeLocaleUrl(lang, 'contact')} class="px-8 py-4 bg-transparent border border-white text-white font-semibold rounded-md transition-colors hover:bg-white/10 text-center">
					Contact Us
				</a>
			</div>
		</div>
	</section>

    <GlobalPartners />

	<!-- Key Value Prop (The "Three Pillars") -->
	<section class="py-20 bg-gray-50 border-b border-gray-100">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Core Technologies</h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">Scientific mechanisms driving animal health and profitability.</p>
            </div>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<!-- Pathogen Control -->
				<div class="group block p-8 bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 border-t-4 border-[#004d40] text-left">
                    <!-- Shield Icon -->
                    <div class="w-10 h-10 text-[#004d40] mb-6">
                        <Fragment set:html={protectionLogo} />
                    </div>
					<h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-[#004d40]">Pathogen Control</h3>
					<p class="text-gray-600 leading-relaxed text-sm">Preventing colonization and contagion of E. coli and Salmonella without antibiotics using RFCâ„¢ technology.</p>
				</div>

				<!-- Gut Integrity -->
				<div class="group block p-8 bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 border-t-4 border-[#004d40] text-left">
                    <!-- Cell/Structure Icon -->
                     <div class="w-10 h-10 text-[#004d40] mb-6">
                        <Fragment set:html={gutLogo} />
                    </div>
					<h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-[#004d40]">Gut Integrity</h3>
					<p class="text-gray-600 leading-relaxed text-sm">Strengthening tight junctions to prevent Leaky Gut Syndrome and improve nutrient absorption.</p>
				</div>

				<!-- Performance ROI -->
				<div class="group block p-8 bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 border-t-4 border-[#004d40] text-left">
                    <!-- Chart/ROI Icon -->
                    <div class="w-10 h-10 text-[#004d40] mb-6">
                        <Fragment set:html={profitLogo} />
                    </div>
					<h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-[#004d40]">Performance ROI</h3>
					<p class="text-gray-600 leading-relaxed text-sm">Optimizing Feed Conversion Rates (FCR) and metabolic efficiency for measurable profitability.</p>
				</div>
			</div>
		</div>
	</section>

    <!-- Key Value Prop -->
    <section class="py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row items-center gap-16">
                <div class="md:w-1/2">
                    <div class="relative rounded-2xl overflow-hidden shadow-2xl">
                         <Image
                            src={scientistImage}
                            alt="Clinical lab with scientists"
                            class="w-full h-96 object-cover"
                         />
                    </div>
                </div>
                <div class="md:w-1/2">
                    <h2 class="text-3xl font-bold text-gray-900 mb-6">Science-Backed Solutions</h2>
                    <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                        We focus on <strong>gut welfare</strong>, <strong>antibiotic-free production</strong>, and <strong>performance optimization</strong>. By utilizing Refined Functional Carbohydrates (RFCs) technology, we help producers suppress pathogens and prevent cell destruction.
                    </p>
                    <ul class="space-y-4 mb-8">
                        <li class="flex items-start">
                             <svg class="h-6 w-6 text-primary mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                             <span class="text-gray-700">Improve Gut Integrity (Tight Junctions)</span>
                        </li>
                        <li class="flex items-start">
                             <svg class="h-6 w-6 text-primary mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                             <span class="text-gray-700">Control Pathogens (E. coli, Salmonella)</span>
                        </li>
                        <li class="flex items-start">
                             <svg class="h-6 w-6 text-primary mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                             <span class="text-gray-700">Mitigate Mycotoxin Risks</span>
                        </li>
                    </ul>
                    <a href={getRelativeLocaleUrl(lang, 'about')} class="text-primary font-bold hover:text-primary-dark inline-flex items-center">
                        Read more about our technology
                        <svg class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>