---
import Layout from '../../../layouts/Layout.astro';
import rumiLogo from '../../../assets/rumi-logo.svg?raw';
import aviLogo from '../../../assets/avi-logo.svg?raw';
import aquaLogo from '../../../assets/aqua-logo.svg?raw';
---

<Layout title="Çözümler">
    <div class="bg-gray-50 py-12 sm:py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h1 class="text-4xl font-bold text-gray-900 mb-4">Çözümlerimiz</h1>
                <p class="text-xl text-gray-600 max-w-2xl mx-auto">Hayvansal üretimin her aşaması için özel teknolojiler.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<!-- Ruminant -->
				<a href="/tr/solutions/ruminant" class="group block p-8 bg-white rounded-xl shadow-sm border border-gray-100 hover:border-primary hover:shadow-lg transition-all duration-300">
                    <div class="h-12 w-12 bg-teal-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors text-primary">
                        <div class="w-6 h-6">
                            <Fragment set:html={rumiLogo} />
                        </div>
                    </div>
					<h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary">Ruminant</h3>
					<p class="text-gray-600">Bağırsak sağlığı, yem verimliliği ve performans çözümleri.</p>
                    <span class="mt-4 inline-block text-sm font-medium text-primary group-hover:underline">Daha fazla bilgi &rarr;</span>
				</a>

				<!-- Poultry -->
				<a href="/tr/solutions/poultry" class="group block p-8 bg-white rounded-xl shadow-sm border border-gray-100 hover:border-primary hover:shadow-lg transition-all duration-300">
                    <div class="h-12 w-12 bg-teal-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors text-primary">
                         <div class="w-6 h-6">
                            <Fragment set:html={aviLogo} />
                        </div>
                    </div>
					<h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary">Kanatlı</h3>
					<p class="text-gray-600">Antibiyotiksiz üretim ve patojen kontrolü.</p>
                    <span class="mt-4 inline-block text-sm font-medium text-primary group-hover:underline">Daha fazla bilgi &rarr;</span>
				</a>

				<!-- Aquaculture -->
				<a href="/tr/solutions/aquaculture" class="group block p-8 bg-white rounded-xl shadow-sm border border-gray-100 hover:border-primary hover:shadow-lg transition-all duration-300">
                    <div class="h-12 w-12 bg-teal-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors text-primary">
                        <div class="w-6 h-6">
                            <Fragment set:html={aquaLogo} />
                        </div>
                    </div>
					<h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary">Su Ürünleri</h3>
					<p class="text-gray-600">Su ürünleri sağlığı için özel çözümler.</p>
                    <span class="mt-4 inline-block text-sm font-medium text-primary group-hover:underline">Daha fazla bilgi &rarr;</span>
				</a>
			</div>
        </div>
    </div>
</Layout>